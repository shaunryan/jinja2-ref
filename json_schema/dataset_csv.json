{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/dataset_csv.schema.json",
  "title": "Delimited Text Dataset",
  "description": "An delimited text format described by a flat file format. CSV is a misnomer however it's consistent with spark",
  "type": "object",
  "properties": {
    "layer": {
      "type": "string"
    },
    "datastore": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "partition_by": {
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "header": {
          "type": "boolean"
        },
        "delimiter": {
          "type": "string"
        },
        "inferSchema": {
          "type": "boolean"
        },
        "escape": {
          "type": "string"
        },
        "quote": {
          "type": "string"
        }
      },
      "required": [
        "header",
        "inferSchema",
        "delimiter",
        "inferSchema",
        "escape",
        "quote"
      ]
    }
  },
  "required": ["layer", "datastore", "format", "partition_by"]
}
