{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/dataset_deltalake.schema.json",
  "title": "Deltalake Dataset",
  "description": "An deltalake dataset. Deltalake has transactional and schema evolution features",
  "type": "object",
  "properties": {
    "layer": {
      "type": "string"
    },
    "datastore": {
      "type": "string"
    },
    "format": {
      "type": "string"
    },
    "partition_by": {
      "type": "string"
    },
    "options": {
      "type": "object",
      "properties": {
        "mode": {
          "type": "string",
          "enum": ["overwrite", "append"]
        },
        "mergeschema": {
          "type": "boolean"
        }
      },
      "required": [
        "mode",
        "mergeschema"
      ]
    }
  },
  "required": ["layer", "datastore", "format", "partition_by"]
}
