{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://sibytes.com/schemas/project",
    "type": "object",
    "properties": {
        "version": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "layers": {
            "type": "array",
            "minContains": 1,
            "items": {
                "$ref": "/schemas/layer"
            }
        }
    },
    "required": [
        "description",
        "layers",
        "name",
        "version"
    ]
}