{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "version": {
            "type": "integer"
        },
        "formatters": {
            "type": "object",
            "properties": {
                "simple": {
                    "type": "object",
                    "properties": {
                        "format": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "format"
                    ]
                }
            },
            "required": [
                "simple"
            ]
        },
        "handlers": {
            "type": "object",
            "properties": {
                "console": {
                    "type": "object",
                    "properties": {
                        "class": {
                            "type": "string"
                        },
                        "level": {
                            "type": "string"
                        },
                        "formatter": {
                            "type": "string"
                        },
                        "stream": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "class",
                        "formatter",
                        "level",
                        "stream"
                    ]
                }
            },
            "required": [
                "console"
            ]
        },
        "loggers": {
            "type": "object",
            "properties": {
                "simplelogger": {
                    "type": "object",
                    "properties": {
                        "level": {
                            "type": "string"
                        },
                        "handlers": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "propogate": {
                            "type": "boolean"
                        }
                    },
                    "required": [
                        "handlers",
                        "level",
                        "propogate"
                    ]
                }
            },
            "required": [
                "simplelogger"
            ]
        },
        "root": {
            "type": "object",
            "properties": {
                "level": {
                    "type": "string"
                },
                "handlers": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "handlers",
                "level"
            ]
        }
    },
    "required": [
        "formatters",
        "handlers",
        "loggers",
        "root",
        "version"
    ]
}